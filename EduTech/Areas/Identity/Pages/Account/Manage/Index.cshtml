@page
@model IndexModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container mt-4">
    <h3 class="mb-4">
        <i class="bi bi-person-circle me-2"></i>@ViewData["Title"]
    </h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Name" class="form-control" placeholder="Nhập họ và tên" />
                            <label asp-for="Input.Name" class="form-label">
                                <i class="bi bi-person me-2"></i>Họ và tên
                            </label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" disabled />
                            <label asp-for="Username" class="form-label">
                                <i class="bi bi-at me-2"></i>Username
                            </label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                            <label asp-for="Input.PhoneNumber" class="form-label">
                                <i class="bi bi-telephone me-2"></i>Số điện thoại
                            </label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button id="update-profile-button" type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
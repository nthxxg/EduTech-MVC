@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container py-5">
    <h3 class="mb-4">
        <i class="bi bi-shield-lock me-2"></i>@ViewData["Title"]
    </h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form id="change-password-form" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu cũ" />
                                <label asp-for="Input.OldPassword" class="form-label">
                                    <i class="bi bi-key me-2"></i>Mật khẩu cũ
                                </label>
                            </div>
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nhập mật khẩu mới" />
                                <label asp-for="Input.NewPassword" class="form-label">
                                    <i class="bi bi-lock me-2"></i>Mật khẩu mới
                                </label>
                            </div>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Xác nhận mật khẩu mới"/>
                                <label asp-for="Input.ConfirmPassword" class="form-label">
                                    <i class="bi bi-check-circle me-2"></i>Xác nhận mật khẩu mới
                                </label>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-arrow-repeat me-2"></i>Cập nhật mật khẩu
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


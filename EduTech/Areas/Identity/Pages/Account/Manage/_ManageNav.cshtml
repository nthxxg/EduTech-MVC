@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="card shadow-sm border-0 mb-4" style="max-width: 300px;">

    <div class="card-body p-0">
        <a asp-controller="Home" asp-action="Index" class="d-block text-decoration-none text-dark p-3 border-bottom">
            <i class="bi bi-house-door text-primary me-2"></i> Quay lại trang chủ
        </a>

        <div class="list-group list-group-flush">
            <a class="list-group-item list-group-item-action border-0 @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
                <i class="bi bi-person-circle me-2"></i> Thông tin cá nhân
            </a>
            <a class="list-group-item list-group-item-action border-0 @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
                <i class="bi bi-envelope me-2"></i> Địa chỉ Email
            </a>
            <a class="list-group-item list-group-item-action border-0 @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
                <i class="bi bi-key me-2"></i> Mật khẩu
            </a>
            @if (hasExternalLogins)
            {
                <a id="external-login" class="list-group-item list-group-item-action border-0 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">
                    <i class="bi bi-box-arrow-in-right me-2"></i> External logins
                </a>
            }
        </div>
    </div>
</div>

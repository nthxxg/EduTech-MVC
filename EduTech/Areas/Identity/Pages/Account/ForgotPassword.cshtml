@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu?";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">
                        <i class="bi bi-question-circle text-primary me-2"></i>@ViewData["Title"]
                    </h2>
                    <p class="text-center text-muted mb-4">Nhập email của bạn để đặt lại mật khẩu</p>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ten@email.com" />
                            <label asp-for="Input.Email" class="form-label">
                                <i class="bi bi-envelope me-2"></i>Địa chỉ Email
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-key me-2"></i>Đặt lại mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a asp-page="./Login" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Trở về đăng nhập
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


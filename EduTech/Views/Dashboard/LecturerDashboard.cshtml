@{
    ViewData["Title"] = "Thông tin giảng viên";
}

@model ApplicationUser

<div class="row g-4">
        <!-- Lecturer Information Card -->
        <div class="col-12">
            <div class="card shadow-sm border-2">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4">Thông tin giảng viên</h5>
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="position-relative">
                                <div class="rounded-circle overflow-hidden bg-light d-flex align-items-center justify-content-center" 
                                     style="width: 120px; height: 120px;">
                                    <i class="bi bi-person text-secondary" style="font-size: 3rem;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row g-2">
                                <div class="col-12"><p class="mb-1"><strong>Họ tên:</strong> @Model.Name</p></div>
                                <div class="col-12"><p class="mb-1"><strong>Email:</strong> @Model.Email</p></div>
                                <div class="col-12"><p class="mb-1"><strong>Số điện thoại:</strong> @Model.PhoneNumber</p></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Cards Row -->
        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-2">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-clipboard-plus text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h6 class="card-title">Đăng ký dạy</h6>
                <a asp-action="Index" asp-controller="Class" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-2">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-calendar-week text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h6 class="card-title">Lịch dạy</h6>
                <a asp-action="ClassesTeaching" asp-controller="Lecturer" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-2">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-pencil-square text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h6 class="card-title">Chấm điểm</h6>
                <a asp-action="ClassesInProgress" asp-controller="Lecturer" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm border-2">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-graph-up-arrow text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h6 class="card-title">Danh sách lớp học đã tham gia</h6>
                <a asp-action="ClassesHistory" asp-controller="Lecturer" class="stretched-link"></a>
                </div>
            </div>
        </div>
    </div>

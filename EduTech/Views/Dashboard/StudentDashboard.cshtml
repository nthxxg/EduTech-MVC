@{
    ViewData["Title"] = "Thông tin học viên";
}

@model ApplicationUser

<div class="row g-4">
        <!-- Student Information Card -->
        <div class="col-lg-8">
            <div class="card shadow-sm h-100 border-2">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4">Thông tin học viên</h5>
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="position-relative">
                                <div class="rounded-circle overflow-hidden bg-light d-flex align-items-center justify-content-center"
                                     style="width: 120px; height: 120px;">
                                    <i class="bi bi-person text-secondary" style="font-size: 3rem;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="row g-2">
                                <div class="col-12"><p class="mb-1"><strong>Họ tên:</strong> @Model.Name </p></div>
                                <div class="col-12"><p class="mb-1"><strong>Email:</strong> @Model.Email </p></div>
                                <div class="col-12"><p class="mb-1"><strong>Số điện thoại:</strong> @Model.PhoneNumber </p></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side Quick Access Cards -->
        <div class="col-lg-4">
            <div class="row g-3 h-100">
                <!-- Study Results -->
                <div class="col-6 d-flex">
                    <div class="card flex-fill shadow-sm border-2">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-3">
                            <div class="icon-wrapper mb-3">
                                <i class="bi bi-file-earmark-text text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title text-center small mb-0">Kết quả học tập</h6>
                            <a asp-action="AllGrades" asp-controller="Student" class="stretched-link"></a>
                        </div>
                    </div>
                </div>

                <!-- Exam Results Lookup -->
                <div class="col-6 d-flex">
                    <div class="card flex-fill shadow-sm border-2">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-3">
                            <div class="icon-wrapper mb-3">
                                <i class="bi bi-search text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title text-center small mb-0">Tra cứu kết quả học</h6>
                        <a href="@Url.Action("ExamResults", "Exam")" class="stretched-link"></a>
                        </div>
                    </div>
                </div>

                <!-- Schedule -->
                <div class="col-6 d-flex">
                    <div class="card flex-fill shadow-sm border-2">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-3">
                            <div class="icon-wrapper mb-3">
                                <i class="bi bi-calendar-week text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title text-center small mb-0">Lịch học</h6>
                        <a asp-action="ClassesEnroll" asp-controller="Student" class="stretched-link"></a>
                        </div>
                    </div>
                </div>

                <!-- Exam Schedule -->
                <div class="col-6 d-flex">
                    <div class="card flex-fill shadow-sm border-2">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-3">
                            <div class="icon-wrapper mb-3">
                                <i class="bi bi-calendar-check text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <h6 class="card-title text-center small mb-0">Lịch thi</h6>
                            <a asp-controller="Student" asp-action="CurrentExamSchedule" class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Administrative Cards -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-2">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-pencil-square text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h6 class="card-title">Đăng ký môn học</h6>
                <a asp-action="Index" asp-controller="Class" class="stretched-link"></a>
                </div>
            </div>
        </div>


        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-2">
                <div class="card-body text-center p-4">
                    <div class="icon-wrapper mb-3">
                        <i class="bi bi-file-text text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h6 class="card-title">Hóa đơn</h6>
                    <a asp-controller="Student" asp-action="GetInvoices" class="stretched-link"></a>
                </div>
            </div>
        </div>
    </div>

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EduTech</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Font -->
    @* <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet"> *@
    <!-- Custom CSS -->
    <link rel="stylesheet" href="@Url.Content("./css/site.css")" asp-append-version="true" />
</head>

<body>
    <!-- Top Bar -->

    <header>
        <div class="top-bar py-2">
            <div class="container">
                <div class="d-flex justify-content-end align-items-center gap-1">
                    <a href="#" class="text-white text-decoration-none">Cổng thanh toán học phí</a>
                    <a href="#" class="text-white text-decoration-none">Liên hệ</a>
                    <a href="#" class="social-icon">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" class="social-icon">
                        <i class="bi bi-linkedin"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand" href="/">
                    <img src="/logo.png" alt="EduTech Logo" height="90" width="auto">
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Content -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-bold" href="#">GIỚI THIỆU</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-bold" href="#">THÔNG BÁO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-bold" href="/class">LỚP HỌC</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 fw-bold" href="@Url.Action("ExamResults", "Exam")">TRA CỨU KẾT QUẢ THI</a>
                        </li>
                    </ul>

                    <!-- Login -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

     </header>
        <!-- Main Content -->
        <div class="container mt-4">
            @RenderBody()
        </div>

    <footer class="main-footer py-5">
        <div class="container">
            <div class="row">
                <!-- Thông tin liên hệ -->
                <div class="col-md-6">
                    <div class="brand-title h2">Edu<span class="fw-bold">TECH</span></div>
                    <div class="est-year mb-3">Est.2024</div>

                    <div class="contact-info">
                        <p><i class="bi bi-geo-alt-fill me-2"></i>Cơ sở: 140 Lê Trọng Tấn, P. Tây Thạnh, Q. Tân Phú, TP.HCM</p>
                        <p><i class="bi bi-telephone-fill me-2"></i>Điện thoại: (028) 12345678</p>
                        <p><i class="bi bi-envelope-fill me-2"></i>Email: info@edutech.edu.vn</p>
                    </div>

                    <div class="copyright mt-3">
                        Bản quyền thuộc EduTECH, Thành phố Hồ Chí Minh. Năm 2024
                    </div>
                </div>

                <!-- Bản đồ -->
                <div class="col-md-6">
                    <div class="map-container h-100">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.0673478727094!2d106.62609067488295!3d10.806153889344406!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752be27d8b4f4d%3A0x92dcba2950430867!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBDw7RuZyBUaMawxqFuZyBUUC4gSOG7kyBDaMOtIE1pbmggKEhVSVQp!5e0!3m2!1svi!2s!4v1732874710767!5m2!1svi!2s"
                                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </footer>

     <p class="text-center mb-0 pt-5">2024 &copy; EduTech - KHÓA LUẬN TỐT NGHIỆP</p>

        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Custom JS -->
        <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>

</html>

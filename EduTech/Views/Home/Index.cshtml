@{
    ViewData["Title"] = "Trang chủ";
}

    <!-- Main Header -->
    <div class="container text-center py-4">
        <h1 class="display-5 fw-bold">TRUNG TÂM CÔNG NGHỆ THÔNG TIN</h1>
        <div class="bg-light d-inline-block px-4 py-2 rounded-3 mt-2">
            <h5 class="m-0">Cung cấp các khóa học ngắn hạn</h5>
        </div>
    </div>

    <!-- Course Cards -->
    <div class="container mb-4">
        <div class="row">
            <div class="col-md-4 col-lg-2 mb-3">
                <div class="course-card">
                    <div class="hexagon-top"></div>
                    <div class="p-3 text-center">
                        <i class="bi bi-laptop fs-1 mb-2"></i>
                        <h6>Triển khai ứng dụng Công nghệ thông tin</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-2 mb-3">
                <div class="course-card">
                    <div class="hexagon-top"></div>
                    <div class="p-3 text-center">
                        <i class="bi bi-shield-lock fs-1 mb-2"></i>
                        <h6>An ninh mạng và hạ tầng mạng</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-2 mb-3">
                <div class="course-card">
                    <div class="hexagon-top"></div>
                    <div class="p-3 text-center">
                        <i class="bi bi-database fs-1 mb-2"></i>
                        <h6>Big Data</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-2 mb-3">
                <div class="course-card">
                    <div class="hexagon-top"></div>
                    <div class="p-3 text-center">
                        <i class="bi bi-graph-up fs-1 mb-2"></i>
                        <h6>Business Intelligence</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-2 mb-3">
                <div class="course-card">
                    <div class="hexagon-top"></div>
                    <div class="p-3 text-center">
                        <i class="bi bi-window fs-1 mb-2"></i>
                        <h6>Thiết kế Website</h6>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-2 mb-3">
                <div class="course-card">
                    <div class="hexagon-top"></div>
                    <div class="p-3 text-center">
                        <i class="bi bi-award fs-1 mb-2"></i>
                        <h6>Chứng chỉ ứng dụng CNTT cơ bản</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Training Courses Section -->
   
    <!-- Footer Actions -->
    <div class="footer-section">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-md-3 mb-3 mb-md-0">
                    
                    <a class="action-card d-block" asp-area="Identity"
                       asp-page="/Account/Register">
                        <i class="bi bi-pencil-square fs-1 mb-2"></i>
                        <div>Đăng ký để ghi danh ngay</div>
                    </a>
                    
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <a asp-controller="Course" asp-action="Index" class="action-card d-block">
                        <i class="bi bi-journal-text fs-1 mb-2"></i>
                        <div>Danh sách các khóa học</div>
                    </a>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <a asp-controller="Class" asp-action="Index" class="action-card d-block">
                        <i class="bi bi-people fs-1 mb-2"></i>
                        <div>Danh sách các lớp học</div>
                    </a>
                </div>
                <div class="col-md-3 text-white d-flex align-items-center">
                    <h5 class="m-0">Thông báo chiêu sinh các lớp khóa 2024</h5>
                </div>
            </div>
        </div>
    </div>


    <!-- Training Courses Section -->
    <section class="training-section">
        <div class="container">
            <h2 class="training-title">KHÓA HỌC ĐÀO TẠO</h2>
            <div class="row g-4 justify-content-center">
                <!-- Row 1 -->
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-microsoft course-icon"></i>
                        <h3 class="course-title">Chứng chỉ MOS</h3>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-brush course-icon"></i>
                        <h3 class="course-title">Photoshop</h3>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-cloud course-icon"></i>
                        <h3 class="course-title">Điện toán đám mây</h3>
                    </div>
                </div>

                <!-- Row 2 -->
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-database course-icon"></i>
                        <h3 class="course-title">Cơ sở dữ liệu</h3>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-terminal course-icon"></i>
                        <h3 class="course-title">Linux cơ bản</h3>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-windows course-icon"></i>
                        <h3 class="course-title">Ứng dụng CNTT</h3>
                    </div>
                </div>

                <!-- Row 3 -->
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-shield-check course-icon"></i>
                        <h3 class="course-title">Tường lửa & IDS/IPS</h3>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-tools course-icon"></i>
                        <h3 class="course-title">IT Helpdesk</h3>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="training-card">
                        <i class="bi bi-layout-text-window-reverse course-icon"></i>
                        <h3 class="course-title">UI/UX</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Access Section -->
    <section class="quick-access">
        <div class="container">
            <h2 class="quick-access-title">Truy cập tiện ích</h2>
            <div class="row">
                <div class="col-md-4">
                    <a href="#" class="utility-card">
                        <i class="bi bi-megaphone utility-icon"></i>
                        <div class="utility-content">
                            <h3>Thông báo mở lớp</h3>
                            <p>Thông báo thời gian các đợt mở lớp</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="#" class="utility-card">
                        <i class="bi bi-calendar-event utility-icon"></i>
                        <div class="utility-content">
                            <h3>Thông báo lịch học</h3>
                            <p>Thông báo thời gian các đợt mở lớp</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("ExamResults", "Exam")" class="utility-card">
                 
                        <i class="bi bi-search utility-icon"></i>
                        <div class="utility-content">
                            <h3>Tra cứu điểm thi</h3>
                            <p>Tra cứu điểm thi theo từng đợt</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="#" class="utility-card">
                        <i class="bi bi-clipboard-check utility-icon"></i>
                        <div class="utility-content">
                            <h3>Thông báo tổ chức thi</h3>
                            <p>Thông báo kì thi sắp tổ chức</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="#" class="utility-card">
                        <i class="bi bi-card-checklist utility-icon"></i>
                        <div class="utility-content">
                            <h3>Thông báo có kết quả thi</h3>
                            <p>Thông báo kết quả thi của từng đợt</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="#" class="utility-card">
                        <i class="bi bi-award utility-icon"></i>
                        <div class="utility-content">
                            <h3>Thông báo nhận chứng chỉ</h3>
                            <p>Thông báo nhận chứng chỉ theo từng đợt</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>